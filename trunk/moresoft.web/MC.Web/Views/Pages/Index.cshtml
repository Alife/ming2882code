@{
    if (ViewBag.TopPage.Code_pag.ToLower() == "company")
    {
        ViewBag.SelectedMenu = "Company";
    }
    else if (ViewBag.TopPage.Code_pag.ToLower() == "service")
    {
        ViewBag.SelectedMenu = "Service";
    }
    else if (ViewBag.TopPage.Code_pag.ToLower() == "job")
    {
        ViewBag.SelectedMenu = "Job";
    }
    else if (ViewBag.TopPage.Code_pag.ToLower() == "product")
    {
        ViewBag.SelectedMenu = "Product";
    }
}
        <div class="buttomcolumns">
