<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" >
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="application/xhtml+xml; charset=UTF-8" />
    <meta name="title" content="@ViewBag.MetaTitle" />
    <meta name="keywords" content="@ViewBag.MetaKeywords" />
    <meta name="author" content="@ViewBag.MetaAuthor" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
    <link href="@Url.Content("~/content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
<div id="container">
    <div id="header">
        <h1>
            <a title="@ViewBag.Setting.Title_set" href="@ViewBag.Setting.WebUrl_set"><img src="@Url.Content("~/content/images/logo.jpg")" alt="@ViewBag.Setting.Title_set" /></a></h1>
        @Html.Partial("_LogOnPartial")
        <div class="tel"><img src="@Url.Content("~/content/images/tel.gif")" alt="<=Tel>：400-887-4949" />400-887-4949</div>
    </div>
    <div class="menu">
        <ul>
            <li><a href="@Url.Content("~/")"@Html.Raw(ViewBag.SelectedMenu == null ? "class=\"selected\"" : "")><=Home></a></li>
            <li><a href="@Url.Content("~/company.html")"@Html.Raw(ViewBag.SelectedMenu == "Company" ? " class=\"selected\"" : "")><=Company></a></li>
            <li><a href="@Url.Content("~/product.html")"@Html.Raw(ViewBag.SelectedMenu == "Product" ? " class=\"selected\"" : "")><=Product2></a></li>
            <li><a href="@Url.Content("~/news.html")"@Html.Raw(ViewBag.SelectedMenu == "News" ? " class=\"selected\"" : "")><=News></a></li>
            <li><a href="@Url.Content("~/job.html")"@Html.Raw(ViewBag.SelectedMenu == "Job" ? " class=\"selected\"" : "")><=Job></a></li>
            <li><a href="http://www.moresoft.cn" target="_blank"><=Forum></a></li>
            <li><a href="@Url.Content("~/service.html")"@Html.Raw(ViewBag.SelectedMenu == "Service" ? " class=\"selected\"" : "")><=Service></a></li>
        </ul>
    </div>
    <div id="wrapper">
        @RenderBody()
    </div>
    <div id="footer">@if (ViewBag.Link!=null){
        <ul class="link">@foreach (MC.Model.Link_lnk item in ViewBag.Link)
            {<li>@Html.ActionLink(item.Name_lnk,"index", "link", new { url = item.Url_lnk }, new { target = "_blank" })</li>}
        </ul>}
        <div class="clear"></div>
        <p>
            <a href="@Url.Content("~/product.html")"><=Product></a> | 
            <a href="@Url.Content("~/industry.html")"><=Industry></a> | 
            <a href="@Url.Content("~/info.html")"><=Info></a> | 
            @Html.RouteLink("<=Service1>", new { controller = "Pages", action = "Index", id = "service" }) | 
            @Html.RouteLink("<=Partners>", new { controller = "Pages", action = "Index", id = "partners" }) | 
            @Html.RouteLink("<=Case>", new { controller = "Pages", action = "Index", id = "case" }) | 
            <a href="@Url.Content("~/news.html")"><=News1></a> | 
            @Html.RouteLink("<=Company>", new { controller = "Pages", action = "Index", id = "company" }) | 
            @Html.RouteLink("<=Concact>", new { controller = "Pages", action = "Index", id = "concact" }) | 
            @Html.RouteLink("<=SiteMap>", new { controller = "Pages", action = "Index", id = "sitemap" }) | 
            @Html.RouteLink("<=Download>", new { controller = "Pages", action = "Index", id = "download" })
        </p>
        <p><=CopyRight> <a href="http://www.miibeian.gov.cn/">@ViewBag.Setting.ICP_set</a></p>
        <p><=CompanyAddress></p>
    </div>
</div>
</body>
</html>
