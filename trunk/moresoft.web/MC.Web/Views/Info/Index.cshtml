@using Unity.Mvc3.Helpers
        <div class="buttomcolumns">
            <div class="leftcolumn">
                @Html.Partial("_Info")
            </div>
            <div class="contentcolumns">
                <h2>@(ViewBag.CurrentInfoType == null ? "<=Info1>" : @ViewBag.CurrentInfoType.Name_ift)</h2>
                <ul>
                @foreach (var item in ViewBag.Infos.rows)
                {
                    <li><a href="@Url.Content("~/info/detail-" + item.ID_inf + ".html")">@item.Title_inf</a></li>
                }
                </ul>
                <div class="pager">
                    @Html.Raw(Html.Pager((int)ViewBag.Infos.pageIndex, (int)ViewBag.Infos.pageSize, (int)ViewBag.Infos.total, (int)ViewBag.Infos.pageIndex))
                </div>
            </div>
            <div class="clear"></div>
        </div>
